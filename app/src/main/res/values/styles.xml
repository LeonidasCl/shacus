<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/toolbar_white</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="android:textColor">@color/zero_black</item>
        <item name="android:windowAnimationStyle">@style/Animation</item>
    </style>




    <style name="SingleImage">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/toolbar_white</item>
        <item name="android:textColor">@color/zero_black</item>
    </style>

    <style name="ImageContainer">
        <item name="android:background">@color/ff_white</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:textColor">@color/zero_black</item>
    </style>


    <style name="appRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/icon_rating</item>
        <item name="android:indeterminateDrawable">@drawable/icon_rating</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">10dip</item>
    </style>

    <declare-styleable name="MyRatingBar">
        <attr name="progressColor" format="color"></attr>
        <attr name="starWidth" format="dimension"></attr>
        <attr name="starHeight" format="dimension"></attr>
        <attr name="rating" format="float"></attr>
        <attr name="starDrawable" format="reference"></attr>
        <attr name="space" format="dimension"></attr>
        <attr name="isIndicator" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <!--尺寸值-->
        <attr name="starImageSize" format="dimension" />
        <!--星星间距-->
        <attr name="starPadding" format="dimension" />
        <!--星星总数-->
        <attr name="starCount" format="integer" />
        <!--空白的星星资源文件值-->
        <attr name="starEmpty" format="reference" />
        <!--满星资源文件值-->
        <attr name="starFill" format="reference" />
        <!--半星资源文件值-->
        <attr name="starHalf" format="reference" />
        <!--是否可点击boolean值-->
        <attr name="clickable" format="boolean" />
        <!--当前进度float值-->
        <attr name="starStep" format="float" />
        <!--每次进度方式的值，整星还是半星-->
        <attr name="stepSize">
            <enum name="Half" value="0" />
            <enum name="Full" value="1" />
        </attr>
    </declare-styleable>

    <style name="AppTheme.YuePaiDetailActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#ffffff</item>
        <item name="android:textColor">@color/zero_black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.CoursesActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/Animation</item>
        <item name="android:windowBackground">@color/ff_white</item>
        <item name="android:textColor">@color/zero_black</item>
    </style>


    <style name="Vita.ActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ff_white</item>
        <item name="android:textColor">@color/zero_black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/zero_black</item>
        <!--溢出菜单样式 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <!--溢出菜单样式 -->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">true</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:popupBackground">#84000000</item>
        <item name="android:dropDownVerticalOffset">54dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/zero_black</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/guide_banner_selector_point_hollow</item>
    </style>

    <!-- 约拍导航页面的style -->
    <style name="BannerDefaultStyle">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">4096</item>

        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#88aaaaaa</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/bga_banner_selector_point_hollow</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示点的位置 -->
        <item name="banner_pointGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">800</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">12sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
        <item name="banner_placeholderDrawable">@drawable/holder</item>
    </style>

    <!-- 约拍详情页面的style -->
    <style name="BannerDetailStyle">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">false</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">4096</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#88aaaaaa</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/bga_banner_selector_point_hollow</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示点的位置 -->
        <item name="banner_pointGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">800</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
        <item name="banner_placeholderDrawable">@drawable/holder_horizental</item>
    </style>

    <style name="Vita.ActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Vita.ActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="SwipeFling">
        <item name="rotation_degrees">15</item>
        <item name="min_adapter_stack">6</item>
        <item name="max_visible">4</item>
    </style>

    <style name="AlertDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <!--item name="android:topDark">@color/zero_black</item-->
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:centerDark">@color/zero_black</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
