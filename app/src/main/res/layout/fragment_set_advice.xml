<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.shacus.Fragment.SetAdviceFragment"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@color/cc_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="start"
        android:background="@color/gold">
        <ImageButton
            android:id="@+id/btn_back"
            android:background="@drawable/downarrow"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textColor="@color/ee_black"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/btn_sendMessage"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="发送"
            android:textColor="@color/ee_black"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="start">
        <EditText
            android:id="@+id/advice_connectType"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:textSize="@dimen/sp_14"
            android:hint="联系方式"
            android:textColorHint="@color/gray_holo_light"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:maxLines="1"
            android:textAlignment="textStart"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#afafaf"
            android:paddingTop="5dp"
            android:layout_below="@+id/advice_connectType"
            />
        <EditText
            android:id="@+id/advice_content"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:background="#ffffff"
            android:textSize="@dimen/sp_14"
            android:hint="内容"
            android:textColorHint="@color/gray_holo_light"
            android:layout_margin="5dp"
            android:layout_below="@+id/advice_connectType"
            android:textAlignment="textStart"
            />


    </RelativeLayout>

</LinearLayout>
