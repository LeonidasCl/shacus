<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.pc.shacus.Activity.PersonalInfoActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@color/ff_white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="start"
        android:background="@color/toolbar_white">
        <ImageButton
            android:id="@+id/btn_back"
            android:background="@drawable/button_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textColor="@color/zero_black"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/btn_finish"
            android:background="@null"
            android:text="完成"
            android:textColor="@color/zero_black"
            android:textSize="@dimen/sp_16"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/layout_UserImage"
        android:gravity="start"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/text_UserImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="@dimen/sp_16"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>
        <com.example.pc.shacus.View.CircleImageView
            android:id="@+id/imageData_UserImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/user_image"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:id="@+id/layout_UserName"
        android:gravity="start"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/text_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="@dimen/sp_16"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/textData_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风吹柚子"
            android:textSize="@dimen/sp_14"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:id="@+id/layout_UserEmail"
        android:gravity="start">
        <TextView
            android:id="@+id/text_UserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:textSize="@dimen/sp_16"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/textData_UserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789@qq.com"
            android:textSize="@dimen/sp_14"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:id="@+id/layout_UserAddress"
        android:gravity="start">
        <TextView
            android:id="@+id/text_UserAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地"
            android:textSize="@dimen/sp_16"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/textData_UserAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国 江苏 南京"
            android:textSize="@dimen/sp_14"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:id="@+id/layout_UserPhoneNumber"
        android:gravity="start">
        <TextView
            android:id="@+id/text_UserPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="@dimen/sp_16"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/textData_UserPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13911112222"
            android:textSize="@dimen/sp_14"
            android:numeric="integer"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:editable="false"/>
    </RelativeLayout>

    </LinearLayout>

    <!-- 拍照、选择本地图片的底部悬浮菜单 -->
    <FrameLayout
        android:id="@+id/edit_photo_fullscreen_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000"
        android:clickable="true"
        android:layout_gravity="bottom"
        android:focusable="true"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/edit_photo_outer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/edit_photo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/take_picture_layout_round_corner_bg"
                android:orientation="vertical" >
                <View style="@style/horizontal_divider" >
                </View>
                <TextView
                    android:id="@+id/take_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/take_picture"
                    android:textColor="@color/zero_black"
                    android:textSize="20sp" />

                <View style="@style/horizontal_divider" >
                </View>

                <TextView
                    android:id="@+id/select_local_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/select_local_picture"
                    android:textColor="@color/zero_black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_photo_layout"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cancel_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/video_order_layout_round_corner_bg"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/cancel"
                    android:textColor="@color/zero_black"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>