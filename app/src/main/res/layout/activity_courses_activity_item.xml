<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/transparent"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="3dp"
        android:layout_marginTop="2dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:id="@+id/relativeLayout4"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/transparent">

        <ImageView
            android:id="@+id/ItemVideo"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@drawable/p3" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#2a000000">
    <TextView
        android:id="@+id/ItemName"
        android:text="xxxx(视频教程)"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_alignBottom="@+id/ItemSeeNum" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/CollectItem"
        android:src="@drawable/shoucang1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/ItemSeeNum" />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/cancelCollectItem"
        android:src="@drawable/shoucang"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/ItemSeeNum" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:src="@drawable/watch"
        android:id="@+id/imageView"
        android:layout_toStartOf="@+id/ItemViewNum"
        android:layout_alignTop="@+id/ItemViewNum" />

    <TextView
        android:id="@+id/ItemViewNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111111"
        android:textColor="#ffffff"
        android:layout_marginRight="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/ItemSeeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/imageView" />
</RelativeLayout>

</RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/transparent"/>
</LinearLayout>