<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="3dp"
        android:layout_marginTop="2dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:id="@+id/relativeLayout4"
    android:descendantFocusability="blocksDescendants">


    <ImageView
        android:id="@+id/ItemVideo"
        android:src="@mipmap/ic_launcher"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/ItemName"
        android:text="xxxx(视频教程)"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/CollectItem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/transparent"
        android:layout_alignBottom="@+id/ItemViewNum"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:src="@drawable/watch"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/ItemViewNum"
        android:layout_toStartOf="@+id/ItemViewNum" />

    <TextView
        android:id="@+id/ItemViewNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111111"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="30sp"
        android:layout_alignBottom="@+id/ItemVideo"/>
    <TextView
        android:id="@+id/ItemSeeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageView" />


</RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent"/>
</LinearLayout>