<?xml version="1.0" encoding="utf-8"?>
<!--我的粉丝单项布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <ImageButton
        android:id="@+id/follower_user_image"
        android:src="@mipmap/ic_launcher"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:background="@drawable/shape_round"/>

    <TextView
        android:textColor="@color/ee_black"
        android:id="@+id/follower_user_name"
        android:textSize="16sp"
        android:text="我的粉丝"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/follower_user_image"
        android:layout_toEndOf="@+id/follower_user_image" />

    <Button
        android:textColor="@color/aa_black"
        android:text="关 注"
        android:textSize="14sp"
        android:id="@+id/followingbtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>