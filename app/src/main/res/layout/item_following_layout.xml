<?xml version="1.0" encoding="utf-8"?>
<!--我的关注单项布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/following_user_image"
        android:src="@mipmap/ic_launcher"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:textSize="25dp"
        android:text="我的好友"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/following_user_image"
        android:layout_toEndOf="@+id/following_user_image"
        android:id="@+id/following_user_name" />

    <TextView
        android:id="@+id/following_user_signature"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的签名"
        android:layout_toRightOf="@+id/following_user_image"
        android:layout_alignBottom="@+id/following_user_image"/>

    <Button
        android:text="已关注"
        android:id="@+id/followedbtn"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>