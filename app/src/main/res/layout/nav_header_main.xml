<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_header_height"
              android:background="@drawable/side_nav_bar"
              android:gravity="bottom"
              android:orientation="vertical"
              android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_image"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/text_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android"
            android:layout_alignBottom="@+id/image_user"
            android:layout_toEndOf="@+id/image_user"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <ImageView
            android:id="@+id/image_userLevel"
            android:src="@drawable/rank1"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_alignBottom="@+id/text_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_userSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_user"
        android:layout_alignStart="@+id/image_user"
        android:layout_marginLeft="10dp"
        android:text="android.studio@android.com"/>

</RelativeLayout>
