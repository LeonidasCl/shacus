<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_header_height"
              android:gravity="bottom"
              android:orientation="vertical"
              android:theme="@style/ThemeOverlay.AppCompat.Dark"
              android:focusable="true"
              android:focusableInTouchMode="true">

        <com.example.pc.shacus.View.CircleImageView
            android:id="@+id/image_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/personal_default_photo"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/text_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android"
            android:layout_alignBottom="@+id/image_user"
            android:layout_toEndOf="@+id/image_user"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/sp_16"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <ImageView
            android:id="@+id/image_userLevel"
            android:src="@drawable/rank1"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/text_UserName"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="invisible"/>

    <EditText
        android:id="@+id/text_userSign"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/image_user"
        android:background="@null"
        android:textSize="12sp"
        android:singleLine="true"
        android:maxLength="30"
        android:layout_alignStart="@+id/image_user"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="android.studio@android.com"/>

</RelativeLayout>
