<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CourseFragment"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="热门推荐"
            android:textSize="14sp"
            android:textColor="@color/gold"/>
        <Button
            android:id="@+id/btn_moreRecommend"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="more"
            android:textSize="12sp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/aa_black"
        />

    <HorizontalScrollView
        android:id="@+id/recommendCourse_HoriScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/recommendCourse_Linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>

    </HorizontalScrollView>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/aa_black"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的课程"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/downarrow"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageButton
            android:id="@+id/myCourse_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@null"
            android:src="@drawable/main_picture1"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/myCourse_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "如何了解你的摄影风格"
            android:textColor="#ffffff"
            android:padding="5dp"
            android:textSize="12sp"
            android:background="#aacecece"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多分类"
        android:layout_marginTop="10dp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow>
            <RelativeLayout
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/btn_moreType1"
                    android:layout_width="@dimen/course_image_size"
                    android:layout_height="@dimen/course_image_size"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:src="@drawable/p3"
                    />
                <TextView
                    android:layout_width="@dimen/course_image_size"
                    android:layout_height="@dimen/course_image_size"
                    android:text="风景"
                    android:gravity="center"
                    android:background="#aacecece"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btn_moreType2"
                    android:layout_width="@dimen/course_image_size"
                    android:layout_height="@dimen/course_image_size"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:src="@drawable/p1"
                    />
                <TextView
                    android:layout_width="@dimen/course_image_size"
                    android:layout_height="@dimen/course_image_size"
                    android:text="人文"
                    android:gravity="center"
                    android:background="#aacecece"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:gravity="end">
                <ImageButton
                    android:id="@+id/btn_moreType3"
                    android:layout_width="@dimen/course_image_size"
                    android:layout_height="@dimen/course_image_size"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:src="@drawable/p2"
                    />
                <TextView
                    android:layout_width="@dimen/course_image_size"
                    android:layout_height="@dimen/course_image_size"
                    android:text="后期"
                    android:gravity="center"
                    android:background="#aacecece"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/btn_moreType4"
                    android:layout_width="@dimen/course_image_size"
                    android:layout_height="@dimen/course_image_size"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:src="@drawable/start_logo"
                    />
                <TextView
                    android:layout_width="@dimen/course_image_size"
                    android:layout_height="@dimen/course_image_size"
                    android:text="器材"
                    android:gravity="center"
                    android:background="#aacecece"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btn_moreType5"
                    android:layout_width="@dimen/course_image_size"
                    android:layout_height="@dimen/course_image_size"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:src="@drawable/ic_launcher"
                    />
                <TextView
                    android:layout_width="@dimen/course_image_size"
                    android:layout_height="@dimen/course_image_size"
                    android:text="技巧"
                    android:gravity="center"
                    android:background="#aacecece"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:gravity="end">
                <ImageButton
                    android:id="@+id/btn_moreType6"
                    android:layout_width="@dimen/course_image_size"
                    android:layout_height="@dimen/course_image_size"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:src="@drawable/user_image"
                    />
                <TextView
                    android:layout_width="@dimen/course_image_size"
                    android:layout_height="@dimen/course_image_size"
                    android:text="人像"
                    android:gravity="center"
                    android:background="#aacecece"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>
