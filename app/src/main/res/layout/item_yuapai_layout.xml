<?xml version="1.0" encoding="utf-8"?>
<!-- 以下是卡片内布局，此文件的顶级布局的父视图为卡片的白色区域 -->
<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     >

    <ImageView
        android:id="@+id/yuepai_card_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal"

        />

    <TextView
        android:id="@+id/yuepai_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:singleLine="true"
        app:layout_marginLeftPercent="10%"
        app:layout_marginBottomPercent="1%"
        android:text="@string/inloading"
        android:textSize="14sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
       	 />

    <!--<TextView-->
        <!--android:visibility="invisible"-->
        <!--android:id="@+id/yuepai_time"-->
        <!--android:singleLine="true"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="bottom"-->
        <!--app:layout_marginLeftPercent="10%"-->
        <!--app:layout_marginBottomPercent="10%"-->
        <!--android:text="@string/inloading"-->
        <!--android:textSize="14sp"-->
        <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
        <!--/>-->

    <TextView
        android:id="@+id/yuepai_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_marginLeftPercent="10%"
        app:layout_marginBottomPercent="9%"
        android:text="@string/inloading"
        android:singleLine="true"
        android:textColor="@color/gold"
        android:textSize="30sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id="@+id/yuepai_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_marginLeftPercent="10%"
        app:layout_marginBottomPercent="5%"
        android:maxLines="2"
        android:text="@string/inloading"
        android:textSize="14sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />



</android.support.percent.PercentFrameLayout>