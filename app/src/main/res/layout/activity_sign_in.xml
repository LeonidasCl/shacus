<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    tools:context="com.example.pc.shacus.Activity.SignInActivity"
    android:background="#ee9572">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:id="@+id/linearLayout"
    android:background="#9acd32"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">
    <ImageButton
        android:id="@+id/header_left_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
 />
    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签到有礼"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:singleLine="true"
        android:layout_weight="1.09"
        android:layout_toRightOf="@id/header_left_btn"
        android:clickable="true"/>



</LinearLayout>



<RelativeLayout
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/linearLayout"
    android:id="@+id/relativeLayout2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="我的积分:"
        android:textSize="15dp"
        android:textColor="#ffffff"/>
    <Switch
    android:id="@+id/aswitch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
        android:checked="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="明日签到提醒"
        android:layout_toLeftOf="@id/aswitch"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:id="@+id/textView" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout2"
        android:id="@+id/relativeLayout3">

    </RelativeLayout>

    <Button
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签到"
        android:textColor="#ffffff"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="80dp"
        />

    <TextView
        android:id="@+id/signInText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="已签到0天，再签5天可升级"
        android:padding="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="59dp"
        android:layout_alignTop="@+id/signInButton"
        android:layout_alignParentStart="true" />



</RelativeLayout>
